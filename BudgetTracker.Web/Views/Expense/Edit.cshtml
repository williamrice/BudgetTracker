@model EditExpenseViewModel
@{
    ViewData["Title"] = "Edit Recurring Expense";
    Layout = "_DashboardLayout";
    ViewBag.FormAction = "Edit";
    ViewBag.SubmitLabel = "Update Recurring Expense";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3 mb-0">Edit Recurring Expense</h1>
            <p class="text-muted">Update the details of your recurring monthly expense</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Expenses
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="dashboard-card">
                <partial name="_ExpenseForm" model="Model" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/category-modal.js"></script>
    <script>
        setupCategoryModal('CategoryId', 'addCategoryBtn');
    </script>
}
