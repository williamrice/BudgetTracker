@model ExpenseListViewModel
@{
    ViewData["Title"] = "Expenses";
    Layout = "_DashboardLayout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3 mb-0">Budgeted Expenses</h1>
            <p class="text-muted">Manage your budgeted expenses and track your spending</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-danger">
                <i class="fas fa-plus me-2"></i>Add New Expense
            </a>
        </div>
    </div>

    <!-- Summary Card -->
    @if (Model?.Expenses != null && Model.Expenses.Any())
    {
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="stat-card expense">
                    <div class="stat-value">@Model.Expenses.Sum(e => e.Amount).ToString("C")</div>
                    <div class="stat-label">Total Monthly Expenses</div>
                    <div class="mt-2">
                        <small><i class="fas fa-arrow-down me-1"></i>@Model.Expenses.Count() expense(s)</small>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Expense List -->
    <div class="row">
        <div class="col-12">
            <div class="dashboard-card">
                @if (Model == null || Model.Expenses == null || !Model.Expenses.Any())
                {
                    <div class="text-center py-5">
                        <i class="fas fa-minus-circle fa-4x text-muted mb-3"></i>
                        <h5 class="text-muted">No Budgeted Expenses Yet</h5>
                        <p class="text-muted">Start by adding your first budgeted expense to track your spending</p>
                        <a asp-action="Create" class="btn btn-danger">
                            <i class="fas fa-plus me-2"></i>Add First Expense
                        </a>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Amount</th>
                                    <th>Category</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var expense in Model.Expenses)
                                {
                                    <tr>
                                        <td>
                                            <strong>@expense.Name</strong>
                                        </td>
                                        <td>@(expense.Description ?? "No description")</td>
                                        <td>
                                            <span class="amount-negative">@expense.Amount.ToString("C")</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">@expense.CategoryName</span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@expense.Id" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@expense.Id" 
                                                   class="btn btn-sm btn-outline-danger"
                                                   data-confirm-delete="Are you sure you want to delete '@expense.Name'?">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>