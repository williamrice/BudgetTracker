@model ExpenseListViewModel

<h1>Budgeted Expenses</h1>

<div style="margin-bottom: 20px;">
    <a class="btn btn-primary" asp-action="Create">Create New Expense</a>
</div>

@if (Model == null || Model.Expenses == null || !Model.Expenses.Any())
{
    <div class="alert alert-info">No budgeted expenses found.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model.Expenses)
            {
                <tr>
                    <td>@expense.Name</td>
                    <td>@expense.Description</td>
                    <td>@expense.Amount.ToString("C")</td>
                    <td>@expense.CategoryName</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@expense.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@expense.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}