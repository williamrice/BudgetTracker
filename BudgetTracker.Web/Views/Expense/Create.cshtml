@model BudgetTracker.Models.ViewModels.CreateExpenseViewModel
@{
    ViewData["Title"] = "Add Expense";
    Layout = "_DashboardLayout";
    ViewBag.FormAction = "Create";
    ViewBag.SubmitLabel = "Create Expense";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3 mb-0">Add Budgeted Expense</h1>
            <p class="text-muted">Create a new budgeted expense to track your spending</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Expenses
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="dashboard-card">
                <partial name="_ExpenseForm" model="Model" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/category-modal.js"></script>
    <script>
        setupCategoryModal('CategoryId', 'addCategoryBtn');
    </script>
}