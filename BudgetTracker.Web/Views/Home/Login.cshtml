@{
    ViewData["Title"] = "Welcome to Budget Tracker";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body>
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <i class="fas fa-chart-line fa-3x text-primary mb-3"></i>
                <h2>Budget Tracker</h2>
                <p>Take control of your finances today</p>
            </div>

            <div class="d-grid gap-3">
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg">
                    <i class="fas fa-sign-in-alt me-2"></i>
                    Sign In
                </a>
                
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-user-plus me-2"></i>
                    Create Account
                </a>
            </div>

            <div class="text-center mt-4">
                <small class="text-muted">
                    Manage your income, track expenses, and achieve your financial goals
                </small>
            </div>

            <div class="row text-center mt-4">
                <div class="col-4">
                    <i class="fas fa-plus-circle text-success fa-2x mb-2"></i>
                    <small class="d-block text-muted">Track Income</small>
                </div>
                <div class="col-4">
                    <i class="fas fa-minus-circle text-danger fa-2x mb-2"></i>
                    <small class="d-block text-muted">Monitor Expenses</small>
                </div>
                <div class="col-4">
                    <i class="fas fa-chart-pie text-info fa-2x mb-2"></i>
                    <small class="d-block text-muted">View Reports</small>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
