@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_DashboardLayout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-3">Dashboard Overview</h1>
            <p class="text-muted">@Model.CurrentMonth</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stat-card income">
                <div class="stat-value" data-currency>@Model.TotalIncome.ToString("C")</div>
                <div class="stat-label">Total Income</div>
                <div class="mt-2">
                    <small><i class="fas fa-arrow-up me-1"></i>@Model.IncomeCount source(s)</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stat-card expense">
                <div class="stat-value" data-currency>@Model.TotalExpenses.ToString("C")</div>
                <div class="stat-label">Total Expenses</div>
                <div class="mt-2">
                    <small><i class="fas fa-arrow-down me-1"></i>@Model.ExpenseCount expense(s)</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stat-card net">
                <div class="stat-value" data-currency>@Model.NetAmount.ToString("C")</div>
                <div class="stat-label">Net Amount</div>
                <div class="mt-2">
                    <small>
                        @if (Model.NetAmount >= 0)
                        {
                            <i class="fas fa-check-circle me-1"></i><span>Surplus</span>
                        }
                        else
                        {
                            <i class="fas fa-exclamation-triangle me-1"></i><span>Deficit</span>
                        }
                    </small>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stat-card">
                <div class="stat-value">@((Model.TotalIncome > 0 ? (Model.TotalExpenses / Model.TotalIncome * 100) : 0).ToString("F1"))%</div>
                <div class="stat-label">Expense Ratio</div>
                <div class="mt-2">
                    <small><i class="fas fa-percentage me-1"></i>of total income</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="dashboard-card">
                <h5 class="mb-3">Quick Actions</h5>
                <div class="row">
                    <div class="col-md-3 mb-2">
                        <a asp-controller="Income" asp-action="Create" class="btn btn-success w-100">
                            <i class="fas fa-plus me-2"></i>Add Income
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a asp-controller="Expense" asp-action="Create" class="btn btn-danger w-100">
                            <i class="fas fa-minus me-2"></i>Add Expense
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a asp-controller="Income" asp-action="Index" class="btn btn-outline-primary w-100">
                            <i class="fas fa-list me-2"></i>View Income
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a asp-controller="Expense" asp-action="Index" class="btn btn-outline-primary w-100">
                            <i class="fas fa-list me-2"></i>View Expenses
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-lg-6">
            <div class="dashboard-card">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0">Recent Income</h5>
                    <a asp-controller="Income" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                
                @if (Model.RecentIncomes.Any())
                {
                    <div class="recent-items">
                        @foreach (var income in Model.RecentIncomes)
                        {
                            <div class="recent-item">
                                <div class="recent-item-info">
                                    <h6>@income.Name</h6>
                                    <p>@(income.Description ?? "No description")</p>
                                </div>
                                <div class="recent-item-amount amount-positive">
                                    +@income.Amount.ToString("C")
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No income sources yet</p>
                        <a asp-controller="Income" asp-action="Create" class="btn btn-success">Add First Income</a>
                    </div>
                }
            </div>
        </div>
        
        <div class="col-lg-6">
            <div class="dashboard-card">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0">Recent Expenses</h5>
                    <a asp-controller="Expense" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                
                @if (Model.RecentExpenses.Any())
                {
                    <div class="recent-items">
                        @foreach (var expense in Model.RecentExpenses)
                        {
                            <div class="recent-item">
                                <div class="recent-item-info">
                                    <h6>@expense.Name</h6>
                                    <p>@(expense.Description ?? "No description")</p>
                                </div>
                                <div class="recent-item-amount amount-negative">
                                    -@expense.BudgetedAmount.ToString("C")
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No expenses yet</p>
                        <a asp-controller="Expense" asp-action="Create" class="btn btn-danger">Add First Expense</a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Chart Placeholder -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="dashboard-card">
                <h5 class="mb-3">Financial Overview</h5>
                <div class="text-center py-5">
                    <i class="fas fa-chart-pie fa-4x text-muted mb-3"></i>
                    <h6 class="text-muted">Charts and Analytics Coming Soon</h6>
                    <p class="text-muted">Visual representations of your financial data will be available here</p>
                </div>
            </div>
        </div>
    </div>
</div>
