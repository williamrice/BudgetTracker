@page
@model LogoutModel
@{
    ViewData["Title"] = "Sign Out";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Budget Tracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body>
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <i class="fas fa-chart-line fa-3x text-primary mb-3"></i>
                <h2>Sign Out</h2>
            </div>

            @{
                if (User.Identity?.IsAuthenticated ?? false)
                {
                    <div class="text-center">
                        <p class="mb-4">Are you sure you want to sign out of Budget Tracker?</p>
                        <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Home/Welcome", new { area = "" })" method="post">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-sign-out-alt me-2"></i>Yes, Sign Me Out
                            </button>
                        </form>
                        <div class="mt-3">
                            <a href="javascript:history.back()" class="text-decoration-none">
                                <i class="fas fa-arrow-left me-1"></i>Go Back
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center">
                        <div class="mb-4">
                            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                            <h5>Successfully Signed Out</h5>
                            <p class="text-muted">You have been safely signed out of Budget Tracker.</p>
                        </div>
                        <div class="d-grid">
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">
                                <i class="fas fa-sign-in-alt me-2"></i>Sign In Again
                            </a>
                        </div>
                        <div class="mt-3">
                            <a asp-controller="Home" asp-action="Welcome" class="text-decoration-none">
                                <i class="fas fa-home me-1"></i>Return to Home
                            </a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
